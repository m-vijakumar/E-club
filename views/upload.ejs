    <h1>Update Events</h1>
    <form method="post" action="">
        EventTitle:<input type="text" name="video1">
        EventDescription:<input type="text" name="video1">
        EventDate:<input type="date" name="video1">
    </form>

    <% for(var i=0; i <events.length ; i++) { %>
        <%= events[i] %><br>
