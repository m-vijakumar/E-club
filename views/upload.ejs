        <input type="file" name="image" >
        <input type="submit" value="ADDPhoto" />
    </form>

    <!-- JSON.stringify(photos).length -->
    <% for(var i=0; i <photos.length ; i++) { %>
        <!-- JSON.parse(photos) -->
